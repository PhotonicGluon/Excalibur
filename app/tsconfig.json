{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node10",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@assets/*": [
                "./resources/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@theme/*": [
                "./src/theme/*"
            ]
        },
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
