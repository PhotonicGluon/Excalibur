{
    "files.exclude": {
        "node_modules": true
    },
    "cSpell.words": [
        "asar",
        "capawesome",
        "comlink",
        "exef",
        "externalstorage",
        "filelike",
        "fullpath",
        "keysize",
        "listdir",
        "maskito",
        "mimetypes",
        "popover",
        "powmod",
        "priv",
        "randbits",
        "trustless",
        "updaters"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit"
        }
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit"
        }
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit"
        }
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit"
        }
    }
}
