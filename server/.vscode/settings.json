{
  "files.exclude": {
    "**/__pycache__": true,
    ".pytest_cache": true,
    ".python-version": true,
    ".ruff_cache": true,
    ".venv": true
  },
  "cSpell.words": [
    "asgi",
    "decryptor",
    "distributables",
    "dotenv",
    "duckdb",
    "encryptor",
    "exef",
    "fastapi",
    "hexsha",
    "HKDF",
    "keygen",
    "keysize",
    "maxfail",
    "priv",
    "repr",
    "secho",
    "sessionmaker",
    "sqlalchemy",
    "sqlmodel",
    "trustless",
    "typer",
    "vite"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "black-formatter.args": ["--line-length=120"]
}
